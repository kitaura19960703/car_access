<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-8 offset-md-1'>
   <br />
   <h1>会員一覧<i class="fas fa-user"></i></h1>
   <table class="table table-hover">
    <thead>
     <tr class="table-secondary">
      <th>ID</th>
      <th>名前</th>
      <th>年齢</th>
      <th>status</th>
     </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
      <tr>
       <td><%= user.id %></td>
       <td>
        <% if current_user == user %>
         <%= link_to user.first_name + user.last_name, user_path(user.id), class: 'text-success' %>
        <% else %>
         <%= link_to user.first_name + user.last_name, user_path(user.id), class: 'text-secondary' %>
        <% end %>
       </td>
       <td><%= user.age %></td>
       <td><% if user.is_active %><p class="text-dark">有効</p><% else %><p class="text-danger">退会</p><% end %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
