<div class='container'><div class='row'><div class="mx-auto">
    <br /><br />
    <h2>Log in<i class="fas fa-sign-in-alt"></i></h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
     <div>メールアドレス</div>
     <div><%= f.email_field :email, class: "form-control", size: "50", autofocus: true, autocomplete: "email" %></div>
     <br /><br />
     <div>パスワード</div>
     <div><%= f.password_field :password, class: "form-control", size: "50", autocomplete: "current-password" %></div>
     <br></br>
     <div class="actions"><%= f.button :type => "submit", style: 'border-style: none;' do %><i class='fas fa-sign-in-alt btn btn-primary'></i><% end %></div>
    <% end %>
  </div>
 </div>
</div>
